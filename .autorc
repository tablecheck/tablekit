{
  "plugins": [
    "npm",
    [
      "all-contributors",
      {
        "types": {
          "doc": ["**/*.mdx", "**/*.md"],
          "example": ["**/*.stories.*", "**/*.story.*", "**/.storybook/**/*"],
          "infra": ["**/.github/**/*"],
          "test": ["**/*.test.*", "**/*.spec.*", "cypress/**/*"],
          "code": ["**/src/**/*"]
        }
      }
    ],
    "first-time-contributor",
    "released",
    [
      "slack",
      {
        "auth": "app",
        "channels": ["bot-frontend"],
        "atTarget": "frontend-team"
      }
    ]
  ]
}
